<in.srain.cube.views.ptr.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:ptr_duration_to_close="200"
    app:ptr_duration_to_close_header="1000"
    app:ptr_keep_header_when_refresh="true"
    app:ptr_pull_to_fresh="false"
    app:ptr_ratio_of_header_height_to_refresh="1.2"
    app:ptr_resistance="1.7" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <com.car.view.ProgressWheel
            android:id="@+id/pw"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:barLength="30dp"
            app:barWidth="8dp"
            app:circleColor="#F8F8F8"
            app:pwbarColor="#FF6000"
            app:rimColor="#B8B8B8"
            app:rimWidth="4dp"
            app:textColor="#595959"
            app:textSize="16sp" />



        <ListView android:id="@+id/news_important_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/listview_item_bg"
            android:visibility="gone"


            >
        </ListView>
    </FrameLayout>

</in.srain.cube.views.ptr.PtrFrameLayout>